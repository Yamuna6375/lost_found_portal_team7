     <script>
    function togglePassword() {
	    const pwd = document.getElementById("password");
	    const eye = document.getElementById("eyeIcon");
	    if (pwd.type === "password") {
        pwd.type = "text";
		    eye.src = "https://img.icons8.com/ios-filled/50/000000/closed-eye.png";
      } else {
	       pwd.type = "password";
        eye.src = "https://img.icons8.com/ios-filled/50/000000/visible--v1.png";
      }
    }
    function validateForm() {
	     const username = document.getElementById("username").value.trim();
	      const sen = document.getElementById("sen").value.trim();
	     const phone = document.getElementById("phone").value.trim();
	     const password = document.getElementById("password").value.trim();
	    const notRobot = document.getElementById("notRobot").checked;
	     const error = document.getElementById("errorMsg");
 

	if (!username || !sen || !phone || !password) {
	  error.textContent = "All fields are required.";
        return false;
      }
	   if (!/^A866\d{4}$/i.test(sen)) {
        error.textContent = "SEN must be like A8661234.";
        return false;
      }

      if (!/^[0-9]{10}$/.test(phone)) {
        error.textContent = "Phone number must be 10 digits.";
        return false;
      }
	    if (!notRobot) {
        error.textContent = "Please confirm you're not a robot.";
        return false;
      }

	error.textContent = "";



